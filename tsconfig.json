{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "rootDir": "src",
    "strictNullChecks": false,
    "target": "es2015",
    "jsx": "react",
    "types": []
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules"
  ]
}
